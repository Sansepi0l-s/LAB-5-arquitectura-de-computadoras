-----ejercicio 1 ----------


ORG 100H
.MODEL SMALL
.STACK 100H
.DATA    
 TEXT DB "INTRODUZCA UN MENSAJE COMPUESTO POR 6 CARACTER $" 
 TEXT2 DB "INGRESADO POR TECLADO$"
 TEXT3 DB "IMPRESO INGRESADO POR TECLADO $" 
 CADENA DB 6 DUP (0)
.CODE        
            
INICIO: 
MOV AX,@DATA
MOV DS,AX 

MOV AH, 9
LEA DX, TEXT
INT 21H


MOV AH,2 
MOV DL, 10
INT 21H

MOV DL, 13
INT 21H           
           
MOV CX, 6
XOR SI, SI
 
MOV AH, 9
LEA DX,TEXT2
INT 21H     

MOV AH,2 
MOV DL, 10
INT 21H

MOV DL, 13
INT 21H           
        

FOR:
MOV AH, 00H
INT 16H

MOV BL, AL
SUB BL , 30H   


ADD BL, 30H 
MOV DL, BL  
MOV CADENA[SI], DL     
MOV AH, 2
INT 21H  
  
INC SI
LOOP FOR

MOV AH,2 
MOV DL, 10
INT 21H

MOV DL, 13
INT 21H  
 
MOV AH, 9
LEA DX,TEXT3
INT 21H     

MOV AH,2 
MOV DL, 10
INT 21H

MOV DL, 13
INT 21H          
                
MOV CX, 6         
XOR SI,SI  
LOL:
MOV DL, CADENA[SI]
INT 21H
INC SI 

LOOP LOL

MOV AH,4CH
INT 21H
END INICIO
