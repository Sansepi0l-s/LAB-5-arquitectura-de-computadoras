-------ejercicio 2-------------


ORG 100H
.MODEL SMALL
.STACK 100H
.DATA    
SINTECLA DB "NO SE PULSO NINGUNA TECLA", 10, 13, '$'
CONTECLA DB "SE HA PULSADO LA TECLA $"
.CODE                      
INICIO: 
MOV AX,@DATA
MOV DS,AX 

MOV AH,1
INT 16H   


JNZ HAYTECLA 
MOV AH, 2CH
INT 21H
MOV BL, DH
    
ESPERA:
MOV AH, 1
INT 16H
JNZ HAYTECLA
MOV AH, 2CH
INT 21H
CMP BL, DH
JE ESPERA
MOV BL, DH
LEA DX, SINTECLA
MOV AH, 9
INT 21H
JMP ESPERA

HAYTECLA:
MOV BL, AL 
LEA DX, CONTECLA
MOV AH, 9
INT 21H
MOV AH, 2
MOV DL, BL
INT 21H

MOV AH,4CH
INT 21H
END INICIO
